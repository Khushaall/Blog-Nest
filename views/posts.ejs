<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Posts</title>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>

    <style>
        .bg-custom {
            background-image: url('/images/back1.jpg');
            background-size: cover;
            background-position: center;
            height: 100vh;
            margin: 0;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .overlay {
            background-color: rgba(0, 0, 0, 0.4);
            width: 100%;
            height: 100%;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: flex-start;
            padding-top: 2rem;
        }

        .container {
            background-color: rgba(0, 0, 0, 0.6);
           
            border-radius: 0.5rem;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
            width: 100%;
            max-width: 1400px;
            max-height: calc(100vh - 4rem);
            overflow: hidden;
            display: flex;
            flex-direction: column;
        }

        .header {
            position: sticky;
            top: 0;
            background-color: rgba(58, 58, 57, 0.596);
            padding: 1rem;
            z-index: 10;
            display: flex;
            gap: 1rem;
            align-items: center;
            border-bottom: 1px solid rgba(255, 255, 255, 0.2);
        }

        .post-card {
            background-color: #2d3748;
            border: 1px solid #4a5568;
            padding: 1rem;
            border-radius: 0.5rem;
            box-shadow: 0 0 5px rgba(0, 0, 0, 0.3);
            color: white;
        }

        .button-secondary {
            color: #e2e8f0;
            transition: color 0.3s;
        }

        .button-secondary:hover {
            color: #cbd5e0;
        }

        .logout-button {
            position: absolute;
            top: 1rem;
            right: 1rem;
            background-color: #e53e3e;
            color: white;
            padding: 0.5rem 1rem;
            border-radius: 0.375rem;
            text-decoration: none;
            font-weight: bold;
            transition: background-color 0.3s;
        }
        .back-button {
            position: absolute;
            top: 1rem;
            left: 1rem;
            background-color: gray;
            color: white;
            padding: 0.5rem 1rem;
            border-radius: 0.375rem;
            text-decoration: none;
            font-weight: bold;
            transition: background-color 0.3s;
        }

        .logout-button:hover {
            background-color: #c53030;
        }

        .posts-container {
            overflow-y: auto;
            max-height: calc(100vh - 5rem);
            padding: 1rem;
        }
    </style>
</head>

<body class="bg-custom">
   
    <div class="overlay">
        <a href="/profile" class="back-button">Go Back</a>

        <a href="/logout" class="logout-button">Log Out</a>
        <div class="container p-4  mt-4 text-white">
            <div class="header">
                <h1 class="text-4xl font-bold text-blue-300">All Posts</h1>
            </div>
            <div class="posts-container">
                <div class="flex gap-4 flex-wrap justify-center">
                    <% allposts.reverse().forEach(function(post){ %>
                        <% if (post.user) { %>
                            <div class="post-card w-full md:w-1/3 lg:w-1/4">
                                <h4 class="text-xl font-semibold mb-2"><%= post.user.username %></h4>
                                <p class="text-gray-300"><%= post.content %></p>
                                <div class="flex gap-3 mt-3 mb-2 justify-end">
                                    <span class="text-sm text-gray-400"><%= post.likes.length %><a href="/like/<%= post._id %>" class="button-secondary">
                                        <%= post.likes.indexOf(user._id) === -1 ? "Like" : "Unlike" %>
                                    </a></span>
                                </div>
                            </div>
                        <% } %>
                    <% }) %>
                </div>
